<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="580dp"
            android:background="@drawable/bg2"
            android:scaleType="centerCrop" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar">

        </include>

        <LinearLayout
            android:id="@+id/lay_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#fff"
            android:orientation="vertical">

            <com.nextclick.grocery.MyTextView
                android:id="@+id/est"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Summer Wear"
                android:textColor="@color/colorSub"
                android:textStyle="bold"
                android:textSize="16dp" />

            <com.nextclick.grocery.MyTextView
                android:id="@+id/itemname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Cold Shoulder Top"
                android:textColor="@color/colorTex"
                android:textSize="19dp"
                android:visibility="visible" />

            <com.nextclick.grocery.MyTextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="66dp"
                android:gravity="center"
                android:text="â‚¹ 49"
                android:textColor="@color/colorTex"
                android:textSize="16dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/rectss"
            android:elevation="8dp"
            android:padding="14dp"
            android:src="@mipmap/cartww" />

    </FrameLayout>

    <com.nextclick.grocery.MyTextView
        android:id="@+id/but_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#8d7d64"
        android:drawableRight="@drawable/next"
        android:gravity="center"
        android:padding="16dp"
        android:text="BUY NOW"
        android:textColor="#fff"
        android:textSize="16dp" />

</RelativeLayout>
